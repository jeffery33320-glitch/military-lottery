<script>
const jobs = [
    { name: "é™¸è»", url: "https://rdrc.mnd.gov.tw/" },
    { name: "æµ·è»", url: "https://rdrc.mnd.gov.tw/" },
    { name: "æµ·è»é™¸æˆ°éšŠ", url: "https://rdrc.mnd.gov.tw/" }
];

let drawing = false;

function startDraw() {
    if (drawing) return;
    drawing = true;

    const resultDiv = document.getElementById("result");
    resultDiv.classList.add("spin");

    let count = 0;
    const interval = setInterval(() => {
        const temp = jobs[Math.floor(Math.random() * jobs.length)];
        resultDiv.innerText = temp.name;
        count++;

        if (count > 15) {
            clearInterval(interval);
            resultDiv.classList.remove("spin");

            const final = jobs[Math.floor(Math.random() * jobs.length)];
            resultDiv.innerHTML = "ğŸ– æŠ½ä¸­ï¼š<b>" + final.name + "</b>";

            // 2 ç§’å¾Œè‡ªå‹•è·³è½‰
            setTimeout(() => {
                window.location.href = final.url;
            }, 2000);

            drawing = false;
        }
    }, 100);
}
</script>

